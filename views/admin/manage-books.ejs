<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Books | Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen">

  <!-- üîµ NAVBAR -->
  <nav class="bg-blue-600 px-6 py-4 flex items-center justify-between">
    <div class="text-white text-xl font-bold flex items-center gap-2">
      üìò Booket <span class="text-sm font-normal opacity-80">Admin</span>
    </div>

    <div class="flex gap-4">
      <a href="/admin/dashboard" class="text-white font-medium">Dashboard</a>
      <a href="/admin/add-book" class="text-white font-medium">Add Book</a>
      <a href="/admin/logout" class="bg-white text-blue-600 px-4 py-1 rounded-lg font-semibold">
        Logout
      </a>
    </div>
  </nav>

  <!-- üì¶ PAGE CONTENT -->
  <div class="max-w-7xl mx-auto px-6 py-10">

    <div class="flex items-center justify-between mb-6">
      <h2 class="text-3xl font-bold text-gray-800">
        üì¶ Manage Books
      </h2>
      <!-- üîç GOOGLE BOOKS IMPORT -->
      <div class="bg-white p-6 rounded-xl shadow mb-8">
        <h3 class="text-xl font-semibold mb-4">üìö Import from Google Books</h3>

        <div class="flex gap-4">
          <input type="text" id="googleSearch" placeholder="Search book title / author"
            class="w-full p-3 border rounded-lg" />
          <button onclick="searchGoogleBooks()" class="bg-blue-600 text-white px-6 rounded-lg">
            Search
          </button>
        </div>

        <div id="googleResults" class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6"></div>
      </div>

      <a href="/admin/add-book" class="bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-700 transition">
        ‚ûï Add New Book
      </a>
    </div>

    <!-- BOOKS TABLE -->
    <div class="bg-white rounded-xl shadow overflow-x-auto">

      <table class="w-full text-left border-collapse">
        <thead class="bg-gray-100 text-gray-700">
          <tr>
            <th class="px-6 py-3">Title</th>
            <th class="px-6 py-3">Price</th>
            <th class="px-6 py-3">Stock</th>
            <th class="px-6 py-3 text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% if (books.length===0) { %>
            <tr>
              <td colspan="4" class="text-center py-10 text-gray-500">
                No books added yet.
              </td>
            </tr>
            <% } %>

              <% books.forEach(book=> { %>
                <tr class="border-t hover:bg-gray-50">
                  <td class="px-6 py-4 font-medium text-gray-800">
                    <%= book.title %>
                  </td>

                  <td class="px-6 py-4">
                    ‚Çπ<%= book.price %>
                  </td>

                  <td class="px-6 py-4">
                    <%= book.quantity %>
                  </td>

                  <td class="px-6 py-4 text-center space-x-3">

                    <!-- Edit -->
                    <a href="/admin/edit-book/<%= book._id %>"
                      class="inline-block bg-yellow-400 text-white px-3 py-1 rounded-lg hover:bg-yellow-500">
                      ‚úè Edit
                    </a>

                    <!-- Delete -->
                    <form action="/admin/delete-book/<%= book._id %>" method="POST" class="inline"
                      onsubmit="return confirm('Are you sure you want to delete this book?')">
                      <button class="bg-red-500 text-white px-3 py-1 rounded-lg hover:bg-red-600">
                        ‚ùå Delete
                      </button>
                    </form>

                  </td>
                </tr>
                <% }) %>
        </tbody>
      </table>

    </div>

  </div>
<script>
async function searchGoogleBooks() {
  const q = document.getElementById("googleSearch").value;
  if (!q) return;

  const res = await fetch(`/admin/api/google-books?q=${q}`);
  const books = await res.json();

  const container = document.getElementById("googleResults");
  container.innerHTML = "";

  books.forEach(book => {
    container.innerHTML += `
      <div class="border rounded-lg p-4 shadow">
        ${book.thumbnail ? `<img src="${book.thumbnail}" class="h-40 mx-auto mb-2"/>` : ""}
        <h4 class="font-semibold">${book.title}</h4>
        <p class="text-sm text-gray-600">${book.authors}</p>
        <button
          onclick='importBook(${JSON.stringify(book)})'
          class="mt-3 bg-green-600 text-white px-4 py-1 rounded">
          Import
        </button>
      </div>
    `;
  });
}

async function importBook(book) {
  await fetch("/admin/api/import-google-book", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      title: book.title,
      thumbnail: book.thumbnail,
      description: book.description
    })
  });

  alert("‚úÖ Book imported successfully");
  window.location.reload();
}
</script>

</body>

</html>